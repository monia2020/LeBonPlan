{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container">
        {# <p class=" citation text-center">"La mode n'est ni morale ni amorale mais elle est faite pour remonter le moral..."<span class="auteur">***Karl Lagerfeld***</span></p> #}
        <h1 class="text-center mb-4 ">Top catégories</h1>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>
            </ol>
            <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="first-slide" src="{{ asset('images/femme.jpg')}}" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn font-weight-bold text-white" href="{{ path('annonce_categorie', {'id': 113}) }}" role="button">Femme</a></p>
                    </div>
                </div>
            </div>
             <div class="carousel-item">
                <img class="first-slide" src="{{ asset('images/enfant.jpeg')}}" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn font-weight-bold text-white" href="{{ path('annonce_categorie', {'id': 114}) }}" role="button">Enfant</a></p>
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <img class="first-slide" src="{{ asset('images/homme.jpg')}}" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn font-weight-bold text-white" href="{{ path('annonce_categorie', {'id': 112}) }}" role="button">Homme</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('images/bebe.jpg')}}" alt="Second slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn font-weight-bold text-white" href="{{ path('annonce_categorie', {'id': 115}) }}" role="button">Univers bébé</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="third-slide" src="images/servicerapide.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn font-weight-bold text-white btn-lg" href="{{ path('annonce_categorie', {'id': 116}) }}" role="button">Dépannage</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="third-slide" src="images/maison.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn btndepan font-weight-bold text-white btn-lg" href="{{ path('annonce_categorie', {'id': 117}) }}" role="button">Maison</a></p>
                    </div>
                </div>
            </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
        </div>
        <h1 class="text-center mb-5"> Top annonces</h1>
        <div class="row">   
            {% for annonce in annonces %}
                <div class="col-6">
                    <div class="card mb-4 box-shadow">
                        <p class="text-left mx-3 my-2 text-info"><strong>Catégorie: {{ annonce.categorie }}</strong></p>
                        <p class="text-right mx-3 my-2">{{ annonce.type }}</p>
                        <a class="mx-3 titreannonce"> {{ annonce.titre }}</a>
                        <p class="text-right mx-3 prix"> {{ annonce.prix }}€ </p>
                        <img class="card-img-top mx-5 imgpub" src="{{ asset('uploads/images/annonces/')}}{{ annonce.image }}" alt="Card image cap">
                        <div class="card-body">
                        <p class="card-text">{{ annonce.description|slice(0, 50) }}...</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn mx-5"><a class="text-white" href="{{ path('annonce_show', {'id': annonce.id}) }}">Voir</a></button>
                                <a href="#"><ion-icon name="heart-outline"></ion-icon>ajouter aux Favoris</a>
                            </div>

                            <small class="text-muted">Publiée le {{ annonce.createdAt ? annonce.createdAt|date('d-m-Y') : '' }}</small>
                        </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
