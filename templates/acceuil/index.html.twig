{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container">
        {# <p class=" citation text-center">"La mode n'est ni morale ni amorale mais elle est faite pour remonter le moral..."<span class="auteur">***Karl Lagerfeld***</span></p> #}
        <h1 class="text-center mb-4 ">Top catégories</h1>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="first-slide" src="{{ asset('images/femme.jpg')}}" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn btnfemme btn-lg font-weight-bold text-white" href="#" role="button">Femme</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="first-slide" src="{{ asset('images/homme.jpg')}}" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn btnfemme btn-lg font-weight-bold text-white" href="#" role="button">Homme</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="{{ asset('images/image2.jpg')}}" alt="Second slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn btnbebe btn-lg font-weight-bold text-white" href="#" role="button">Univers bébé</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="third-slide" src="images/servicerapide.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn btndepan font-weight-bold text-white btn-lg" href="#" role="button">Dépannage</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="third-slide" src="images/maison.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <p><a class="btn btndepan font-weight-bold text-white btn-lg" href="#" role="button">Maison</a></p>
                    </div>
                </div>
            </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

{% endblock %}
